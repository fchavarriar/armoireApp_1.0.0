<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateMarkActivity"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#EBEDEF">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ultra_white">

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el nombre de la marca o lugar compra"
                    app:errorEnabled="true"
                    android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="@color/ultra_white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                    android:id="@+id/buttoncreatemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"
                    android:text="Crear"
                    android:background="@drawable/border"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>