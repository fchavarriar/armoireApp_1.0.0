<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".CreateArticlesActivity">
android:orientation="vertical"
android:gravity="center"
android:background="#EBEDEF">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/ultra_white">
                <ImageView
                        android:id="@+id/image_article"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        app:srcCompat="@drawable/ic_fi_br_picture"
                        android:layout_gravity="center"
                android:layout_margin="10dp"/>
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/buttoncamera"
                        android:clickable="true"
                        android:focusable="true"
                        android:checkable="true"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        app:cardElevation="16dp"
                        app:cardCornerRadius="6dp"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center">
                    <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView

                                app:srcCompat="@drawable/ic_fi_br_camera"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true">
                        </ImageView>
                        <TextView
                                android:id="@+id/camera"
                                android:text="Tomar fotografia"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15dp"
                                android:textColor="#5d6d7e"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true">
                        </TextView>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/buttongallery"
                        android:clickable="true"
                        android:focusable="true"
                        android:checkable="true"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        app:cardElevation="16dp"
                        app:cardCornerRadius="6dp"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center">
                    <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <ImageView

                                app:srcCompat="@drawable/ic_fi_br_folder"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true">
                        </ImageView>
                        <TextView
                                android:id="@+id/gallery"
                                android:text="Buscar en galeria"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="15dp"
                                android:textColor="#5d6d7e"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true">
                        </TextView>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"
                        app:errorEnabled="true"
                        android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_article"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:background="@color/ultra_white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/list_popup_button_mark"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Marca"
                        android:background="@drawable/custom_popup_background">
                    <AutoCompleteTextView
                            android:id="@+id/text_mark_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:background="@color/ultra_white" android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/list_popup_button_type"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipo"
                        android:background="@drawable/custom_popup_background">
                    <AutoCompleteTextView
                            android:id="@+id/text_type_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:background="@color/ultra_white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Precio"
                        app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:background="@color/ultra_white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descripcion"
                        app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:background="@color/ultra_white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Switch
                        android:id="@+id/enable_dimension_article"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Habilitar dimensión de contenido"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textAlignment="center"
                        tools:ignore="RtlCompat"/>

                <RelativeLayout
                        android:id="@+id/dimension_article"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                    <LinearLayout
                            android:id="@+id/LayoutVolume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">
                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:hint="Volumen"
                                android:gravity="left"
                                android:layout_gravity="center_vertical">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/volume"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName"
                                    android:ems="10"
                                    android:background="@color/ultra_white"
                                    android:enabled="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/list_popup_button_volume"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Volumen"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/custom_popup_background"
                                android:enabled="false">
                        <AutoCompleteTextView
                                android:id="@+id/text_type_list_volume"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:background="@color/ultra_white"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_below="@id/LayoutVolume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                    android:gravity="center_horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/LayoutVolume"
                                android:hint="Peso"
                                android:layout_gravity="center_vertical">
                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/weight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName"
                                    android:ems="10"
                                    android:background="@color/ultra_white"
                                    android:enabled="false"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/list_popup_button_weigth"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Peso"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/custom_popup_background"
                                android:enabled="false">
                        <AutoCompleteTextView
                                android:id="@+id/text_type_list_weigth"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:background="@color/ultra_white"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </RelativeLayout>

                <Button
                        android:id="@+id/buttoncreatearticles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="80dp"
                        android:layout_marginLeft="80dp"
                        android:text="Crear"
                        android:background="@drawable/border"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>