<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".CreateRecipesActivity">
android:orientation="vertical"
android:gravity="center"
android:background="#EBEDEF">

    <ScrollView
            android:id="@+id/scroll_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="16dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ultra_white">
            <ImageView
                    android:id="@+id/image_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:srcCompat="@drawable/ic_fi_br_picture"
                    android:layout_gravity="center"
            android:layout_margin="10dp"/>
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/buttoncamerarecipes"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    app:cardElevation="16dp"
                    app:cardCornerRadius="6dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center">
                <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView

                            app:srcCompat="@drawable/ic_fi_br_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true">
                    </ImageView>
                    <TextView
                            android:id="@+id/camera"
                            android:text="Tomar fotografia"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:textColor="#5d6d7e"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true">
                    </TextView>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/buttongalleryrecipes"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    app:cardElevation="16dp"
                    app:cardCornerRadius="6dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">
                <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView

                            app:srcCompat="@drawable/ic_fi_br_folder"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">
                    </ImageView>
                    <TextView
                            android:id="@+id/gallery"
                            android:text="Buscar en galeria"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:textColor="#5d6d7e"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true">
                    </TextView>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:background="@color/ultra_white"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/list_popup_button_recipes"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo"
                    android:background="@drawable/custom_popup_background">
                <AutoCompleteTextView
                        android:id="@+id/list_type_recipes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:background="@color/ultra_white"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="   Instrucciones">
            <MultiAutoCompleteTextView
                    android:id="@+id/instructions_recipes"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:ems="10"
                   android:background="@color/ultra_white"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                 <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/list_popup_button_ingredient"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:hint="Agregar ingrediente"
                            android:background="@drawable/custom_popup_background">
                        <AutoCompleteTextView
                                android:id="@+id/list_ingredient"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:background="@color/ultra_white"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:hint="Cant.">
                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/amount_recipe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:ems="10"
                                android:background="@color/ultra_white"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <Button
                        android:id="@+id/add_ingredient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agregar ingrediente"
                />

            </LinearLayout>

                <ListView
                        android:id="@+id/list_view_ingredient"
                        android:layout_width="match_parent"
                        android:layout_height="350dp">
                </ListView>

            <Button
                    android:id="@+id/buttoncreaterecipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"
                    android:text="Crear"
                    android:background="@drawable/border"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
</LinearLayout>