<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.androidkotlin.armoireapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true">
        <activity android:name=".RecipeBreakfastReciclerViewActivity"
                  android:parentActivityName=".NavigatorActivity"
                  android:theme="@style/Theme.ArmoireApp">
        </activity>
        <activity
                android:name=".RecipeLunchReciclerViewActivity"
                android:parentActivityName=".NavigatorActivity"
                android:theme="@style/Theme.ArmoireApp">
        </activity>
        <activity
                android:name=".CreateMarkActivity"
                android:parentActivityName=".NavigatorActivity"
                android:theme="@style/Theme.ArmoireApp">
        </activity>
        <activity
                android:name=".CreateTaskActivity"
                android:parentActivityName=".NavigatorActivity"
                android:theme="@style/Theme.ArmoireApp">
        </activity>
        <activity
                android:name=".CreateRecipesActivity"
                android:parentActivityName=".NavigatorActivity"
                android:theme="@style/Theme.ArmoireApp">
            >
        </activity>
        <activity
                android:name=".CreateArticlesActivity"
                android:parentActivityName=".NavigatorActivity"
                android:theme="@style/Theme.ArmoireApp">
        </activity>
        <activity
                android:name=".NavigatorActivity"
                android:theme="@style/Theme.ArmoireApp.NoActionBar">
        </activity>
        <activity
                android:name=".ForgetActivity"
                android:parentActivityName=".LoginActivity"
                android:theme="@style/Theme.ArmoireApp">
        </activity>
        <activity
                android:name=".RegisterActivity"
                android:parentActivityName=".LoginActivity"
                android:theme="@style/Theme.ArmoireApp">
        </activity>
        <activity
                android:name=".LoginActivity"
                android:theme="@style/Theme.ArmoireApp.NoActionBar">
        </activity>
        <activity
                android:name=".MainActivity"
                android:theme="@style/Theme.ArmoireApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>